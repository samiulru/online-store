{{template "base" .}}

{{define "title"}}
    <title>Welcome</title>
{{end}}

{{define "content"}}
    <div id="carousel-container" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carousel-container" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-container" data-slide-to="1"></li>
          <li data-target="#carousel-container" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/static/images/hotel-bedroom.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <div class="row">
                      <div class="col"></div>
                      <div class="col"></div>
                      <div class="col"><h5 style="color: rgb(87, 225, 230); background-color: rgb(14, 24, 14); width: 180px; border: 1px; border-radius: 5px;">Elegant Bedrooms</h5></div>
                      <div class="col"></div>
                      <div class="col"></div>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/static/images/coffee-cup.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <div class="row">
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col"><h5 style="color: rgb(87, 225, 230); background-color: rgb(14, 24, 14); width: 200px; border: 1px; border-radius: 5px;">Refresh Your Morning</h5></div>
                    <div class="col"></div>
                    <div class="col"></div>
                </div>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/static/images/outside-hotel.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <div class="row">
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col"><h5 style="color: rgb(87, 225, 230); background-color: rgb(14, 24, 14); width: 150px; border: 1px; border-radius: 5px;">Outside Nature</h5></div>
                    <div class="col"></div>
                    <div class="col"></div>
                </div>
            </div>
          </div>
        </div>
      </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center mt-3">Welcome to Travel Tryst Bed and Breakfast</h1>
                <h6 class="text-center"><b>Where Your Perfect Stay Awaits!</b></h6>
                <p class="mt-3">
                  Discover a world of seamless travel planning and unparalleled accommodation experiences with our state-of-the-art hotel reservation service.Your home away from home, set on the majestic waters of the Atlantic Ocean, this will be a vacation to remember.Whether you're jet-setting for business, embarking on a romantic getaway, or planning a family vacation, we are your gateway to a universe of handpicked stays tailored to your unique preferences.
                  </p>
            </div>
        </div>
        <div class="row">
          <div class="col text-center">
            <a href="/search-availability"  class="btn btn-success">Make Reservation Now</a>
          </div>
        </div>
    </div>
{{end}}